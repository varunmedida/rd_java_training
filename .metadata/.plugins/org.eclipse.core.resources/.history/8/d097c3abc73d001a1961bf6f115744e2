package com.epam.service;

import java.util.ArrayList;

import com.epam.model.Category;
import com.epam.model.Product;
import com.epam.model.SubCategory;

public interface OnlineShoppingService {

	ArrayList<Category> getAllCategories();

	ArrayList<SubCategory> getSubCategoriesBasedOnCategory(int categoryOption);

	ArrayList<Product> getProductsBasedOnSubCategory(int subCategoryOption);

	void addProductToCart(ArrayList<Product> products, int productOption);

}
