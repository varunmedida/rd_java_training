package com.epam.service;

import java.util.ArrayList;

import com.epam.dao.OnlineShoppingDao;
import com.epam.dao.OnlineShoppingDaoImpl;
import com.epam.model.Category;
import com.epam.model.Product;
import com.epam.model.SubCategory;

public class OnlineShoppingServiceImpl implements OnlineShoppingService {

	static OnlineShoppingDao dao = new OnlineShoppingDaoImpl();

	public ArrayList<Category> getAllCategories() {
		// TODO Auto-generated method stub
		return dao.getAllCategories();
	}

	public ArrayList<SubCategory> getSubCategoriesBasedOnCategory(int categoryOption) {
		// TODO Auto-generated method stub
		return dao.getSubCategoriesBasedOnCategory(categoryOption);
	}

	public ArrayList<Product> getProductsBasedOnSubCategory(int subCategoryOption) {
		// TODO Auto-generated method stub
		return dao.getProductsBasedOnSubCategory(subCategoryOption);
	}

	@Override
	public void addProductToCart(ArrayList<Product> filteredProducts, int productOption) {
		// TODO Auto-generated method stub
		dao.addProductToCart(filteredProducts,productOption);
	}

}
