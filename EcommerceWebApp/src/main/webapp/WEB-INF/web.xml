<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>CategoryServlet</servlet-name>
  	<display-name>CategoryServlet</display-name>
  	<description></description>
  	<servlet-class>com.epam.controller.CategoryServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>SubCategoryServlet</servlet-name>
  	<display-name>SubCategoryServlet</display-name>
  	<description></description>
  	<servlet-class>com.epam.controller.SubCategoryServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ProductServlet</servlet-name>
  	<display-name>ProductServlet</display-name>
  	<description></description>
  	<servlet-class>com.epam.controller.ProductServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>CategoryServlet</servlet-name>
  	<url-pattern>/categories</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>SubCategoryServlet</servlet-name>
  	<url-pattern>/subcategories</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ProductServlet</servlet-name>
  	<url-pattern>/product</url-pattern>
  </servlet-mapping>
</web-app>
