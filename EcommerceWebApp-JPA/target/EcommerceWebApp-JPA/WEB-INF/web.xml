<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>

	<servlet>
		<servlet-name>DisplayServlet</servlet-name>
		<display-name>DisplayServlet</display-name>
		<description></description>
		<servlet-class>com.epam.controller.DisplayServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AddToCartServlet</servlet-name>
		<display-name>AddToCartServlet</display-name>
		<description></description>
		<servlet-class>com.epam.controller.AddToCartServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ViewCartServlet</servlet-name>
		<display-name>ViewCartServlet</display-name>
		<description></description>
		<servlet-class>com.epam.controller.ViewCartServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DisplayServlet</servlet-name>
		<url-pattern>/display</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddToCartServlet</servlet-name>
		<url-pattern>/addtocart</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ViewCartServlet</servlet-name>
		<url-pattern>/viewcart</url-pattern>
	</servlet-mapping>
</web-app>
